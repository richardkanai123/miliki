generator client {
  provider = "prisma-client"
  output   = "../src/app/_generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}

// ===========================================
// BETTER-AUTH MODELS (Preserved)
// ===========================================

model User {
  id            String       @id
  email         String       @unique
  createdAt     DateTime     @default(now())
  updatedAt     DateTime
  name          String
  emailVerified Boolean      @default(false)
  image         String?
  role          String?
  banned        Boolean?     @default(false)
  banReason     String?
  banExpires    DateTime?
  sessions      Session[]
  accounts      Account[]
  members       Member[]
  invitations   Invitation[]
  phoneNumber   String?

  @@map("user")
}

model Session {
  id                   String   @id
  expiresAt            DateTime
  token                String
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  ipAddress            String?
  userAgent            String?
  userId               String
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  impersonatedBy       String?
  activeOrganizationId String?

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Organization {
  id          String       @id
  name        String
  slug        String
  logo        String?
  createdAt   DateTime
  metadata    String?
  members     Member[]
  invitations Invitation[]

  // Property management relation
  properties Property[]

  @@unique([slug])
  @@map("organization")
}

model Member {
  id             String       @id
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  role           String       @default("member")
  createdAt      DateTime

  // Property management relations
  managedProperties Property[] @relation("PropertyManager")
  tenancies         Tenancy[]  @relation("TenantMember")
  payments          Payment[]

  @@index([organizationId])
  @@index([userId])
  @@map("member")
}

model Invitation {
  id             String       @id
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  email          String
  role           String?
  status         String       @default("pending")
  expiresAt      DateTime
  createdAt      DateTime     @default(now())
  inviterId      String
  user           User         @relation(fields: [inviterId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([email])
  @@map("invitation")
}

// ===========================================
// PROPERTY MANAGEMENT MODELS
// ===========================================

enum PropertyType {
  APARTMENT
  HOUSE
  TOWNHOUSE
  STUDIO
  COMMERCIAL
  BEDSITTER
  SINGLE_ROOM
  OTHER
}

/// Property represents a real estate asset containing rentable units
model Property {
  id          String       @id @default(cuid())
  name        String
  description String?      @db.Text
  type        PropertyType @default(APARTMENT)

  // Location (optimized for Kenyan addresses)
  address    String
  city       String
  county     String // Kenyan counties
  postalCode String?

  // Media
  images String[]

  // Ownership & Management
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  managerId      String?
  manager        Member?      @relation("PropertyManager", fields: [managerId], references: [id], onDelete: SetNull)

  // Status
  isActive Boolean @default(true)

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  units     Unit[]
  amenities PropertyAmenity[]

  @@index([organizationId])
  @@index([managerId])
  @@index([city, county])
  @@map("property")
}

model Amenity {
  id       String  @id @default(cuid())
  name     String  @unique
  icon     String?
  category String?

  properties PropertyAmenity[]
  units      UnitAmenity[]

  @@map("amenity")
}

model PropertyAmenity {
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  amenityId  String
  amenity    Amenity  @relation(fields: [amenityId], references: [id], onDelete: Cascade)

  @@id([propertyId, amenityId])
  @@map("property_amenity")
}

enum UnitStatus {
  VACANT
  OCCUPIED
  MAINTENANCE
  RESERVED
}

/// Unit represents a rentable space - listings happen at this level
model Unit {
  id                 String  @id @default(cuid())
  title              String
  description        String? @db.Text
  locationInProperty String?

  // Rental details
  rentAmount    Decimal  @db.Decimal(12, 2)
  depositAmount Decimal? @db.Decimal(12, 2)

  // Specifications
  bedrooms     Int    @default(1)
  bathrooms    Int    @default(1)
  squareMeters Float?

  // Media
  images String[]

  // Status
  status UnitStatus @default(VACANT)

  // Listing - Units are listed individually for house-hunting
  isListed           Boolean   @default(false)
  listingTitle       String? // Custom title for listing
  listingDescription String?   @db.Text // Custom description for listing
  listedAt           DateTime? // When unit was listed

  // Property relationship
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tenancies Tenancy[]
  amenities UnitAmenity[]

  @@index([propertyId])
  @@index([status])
  @@index([rentAmount])
  @@index([isListed, status])
  @@map("unit")
}

model UnitAmenity {
  unitId    String
  unit      Unit    @relation(fields: [unitId], references: [id], onDelete: Cascade)
  amenityId String
  amenity   Amenity @relation(fields: [amenityId], references: [id], onDelete: Cascade)

  @@id([unitId, amenityId])
  @@map("unit_amenity")
}

enum TenancyStatus {
  PENDING
  ACTIVE
  EXPIRED
  CANCELLED
  RENEWED
}

/// Tenancy represents a rental agreement between tenant and unit
model Tenancy {
  id String @id @default(cuid())

  // Term
  startDate DateTime
  endDate   DateTime

  // Financial terms (snapshot at agreement time)
  monthlyRent   Decimal @db.Decimal(12, 2)
  depositAmount Decimal @db.Decimal(12, 2)
  depositPaid   Boolean @default(false)

  // Billing
  billingDay Int @default(1) // Day of month rent is due (1-28)

  // Status
  status       TenancyStatus @default(PENDING)
  cancelReason String?       @db.Text
  cancelledAt  DateTime?

  // Relationships
  unitId   String
  unit     Unit   @relation(fields: [unitId], references: [id], onDelete: Restrict)
  tenantId String
  tenant   Member @relation("TenantMember", fields: [tenantId], references: [id], onDelete: Restrict)

  // Renewal chain
  previousTenancyId String?  @unique
  previousTenancy   Tenancy? @relation("TenancyRenewal", fields: [previousTenancyId], references: [id])
  renewedTenancy    Tenancy? @relation("TenancyRenewal")

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  invoices Invoice[]

  @@index([unitId])
  @@index([tenantId])
  @@index([status])
  @@index([startDate, endDate])
  @@map("tenancy")
}

enum InvoiceStatus {
  DRAFT
  PENDING
  PARTIAL
  PAID
  OVERDUE
  CANCELLED
  WRITTEN_OFF
}

enum InvoiceType {
  RENT
  DEPOSIT
  UTILITY
  PENALTY
  OTHER
}

/// Invoice for tenant billing
model Invoice {
  id            String @id @default(cuid())
  invoiceNumber String @unique

  // Billing
  type        InvoiceType @default(RENT)
  description String?
  amount      Decimal     @db.Decimal(12, 2)
  taxAmount   Decimal     @default(0) @db.Decimal(12, 2)
  totalAmount Decimal     @db.Decimal(12, 2)

  // Payment tracking
  amountPaid Decimal @default(0) @db.Decimal(12, 2)
  balance    Decimal @db.Decimal(12, 2)

  // Dates
  issueDate   DateTime  @default(now())
  dueDate     DateTime
  periodStart DateTime?
  periodEnd   DateTime?

  // Status
  status InvoiceStatus @default(DRAFT)
  sentAt DateTime?
  paidAt DateTime?

  // Relationship
  tenancyId String
  tenancy   Tenancy @relation(fields: [tenancyId], references: [id], onDelete: Restrict)

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  payments Payment[]

  @@index([tenancyId])
  @@index([status])
  @@index([dueDate])
  @@index([invoiceNumber])
  @@map("invoice")
}

enum PaymentMethod {
  MPESA
  BANK_TRANSFER
  CASH
  CHEQUE
  CARD
  OTHER
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
  REFUNDED
}

/// Payment records for invoice settlements
model Payment {
  id String @id @default(cuid())

  // Payment details
  amount Decimal       @db.Decimal(12, 2)
  method PaymentMethod @default(MPESA)

  // References
  transactionRef String? @unique
  externalRef    String?

  // Status
  status        PaymentStatus @default(PENDING)
  failureReason String?

  // M-Pesa fields
  mpesaReceiptNumber String?
  mpesaPhoneNumber   String?

  // Timestamps
  initiatedAt DateTime  @default(now())
  completedAt DateTime?

  // Relationships
  invoiceId String
  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Restrict)
  memberId  String
  member    Member  @relation(fields: [memberId], references: [id], onDelete: Restrict)

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([invoiceId])
  @@index([memberId])
  @@index([status])
  @@index([transactionRef])
  @@index([mpesaReceiptNumber])
  @@map("payment")
}

// ===========================================
// SUPPORTING MODELS
// ===========================================

/// Notification for user alerts
model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String   @db.Text
  type      String // e.g., "invoice", "payment", "tenancy_expiry"
  isRead    Boolean  @default(false)
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([userId, isRead])
  @@index([createdAt])
  @@map("notification")
}

/// Audit log for important actions
model AuditLog {
  id           String   @id @default(cuid())
  userId       String?
  action       String // e.g., "payment.created", "tenancy.cancelled"
  resourceType String // e.g., "payment", "tenancy", "invoice"
  resourceId   String
  metadata     Json? // Before/after values, context
  ipAddress    String?
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([resourceType, resourceId])
  @@index([createdAt])
  @@map("audit_log")
}
